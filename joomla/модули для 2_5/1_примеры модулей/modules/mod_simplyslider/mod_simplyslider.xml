<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="2.5.0">
	<name>mod_simplyslider</name>
	<author>Sergey Kalinin</author>
	<creationDate>June 2012</creationDate>
	<copyright>Copyright (C) 2012 Open Source Matters. All rights reserved.</copyright>
	<license></license>
	<authorEmail>prozaik81-2@yandex.ru</authorEmail>
	<authorUrl>http://prozaik.16mb.com/resume/</authorUrl>
	<version>1.0.0</version>
	<description>Популярный слайдер Nivo в виде модуля для Joomla</description>
	
	<files>
		<filename module="mod_simplyslider">mod_simplyslider.php</filename>										
		<folder>tmpl</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>elements</folder>
		<filename>index.html</filename>
	</files>
	
	<languages folder="language"></languages>
	
	<config>
		<fields name="params" addfieldpath="/modules/mod_simplyslider/elements">							
			<fieldset name="basic" label="">				
				<field 
					name="backgroundcolor" 
					type="colorpicker"  
					default="#fff" 
					label="Цвет фона" 
					description="Выберите цвет фона" />	
				
				<field
					name="slide_image_1"
					type="media"
					label="Слайд 1"
					description="Выберите изображение для слайда" />
					
				<field
					type="text"
					name="slide_link_1"					
					label="Ссылка"
					description="Введите ссылку для слайда"
					size="40"
					maxLength="255" />										
					
				<field 
					name="slide_title_1" 
					type="textarea" 
					default="" 
					label="Текст" 
					description="Введите пояснительный текст к слайду" 
					rows="3" 
					cols="25" />		
										
				<field
					name="slide_image_2"
					type="media"
					label="Слайд 2"
					description="Выберите изображение для слайда (без http://)" />
					
				<field
					type="text"
					name="slide_link_2"					
					label="Ссылка"
					description="Введите ссылку для слайда (без http://)"
					size="40"
					maxLength="255" />															
					
				<field 
					name="slide_title_2" 
					type="textarea" 
					default="" 
					label="Текст" 
					description="Введите пояснительный текст к слайду" 
					rows="3" 
					cols="25" />						

				<field
					name="slide_image_3"
					type="media"
					label="Слайд 3"
					description="Выберите изображение для слайда" />
					
				<field
					type="text"
					name="slide_link_3"					
					label="Ссылка"
					description="Введите ссылку для слайда (без http://)"
					size="40"
					maxLength="255" />															
					
				<field 
					name="slide_title_3" 
					type="textarea" 
					default="" 
					label="Текст" 
					description="Введите пояснительный текст к слайду" 
					rows="3" 
					cols="25" />						

				<field
					name="slide_image_4"
					type="media"
					label="Слайд 4"
					description="Выберите изображение для слайда" />	
					
				<field
					type="text"
					name="slide_link_4"					
					label="Ссылка"
					description="Введите ссылку для слайда (без http://)"
					size="40"
					maxLength="255" />															

				<field 
					name="slide_title_4" 
					type="textarea" 
					default="" 
					label="Текст" 
					description="Введите пояснительный текст к слайду" 
					rows="3" 
					cols="25" />						
	
				<field 
					name="width" 
					type="text" 
					size="9" 
					default="727" 
					label="Ширина" 
					description="Введите в поле ширину слайда в px" />
				
				<field 
					name="height" 
					type="text" 
					size="9" 
					default="300" 
					label="Высота" 
					description="Введите в поле ширину слайда в px" />
				
				<field 
					name="effect" 
					type="list" 
					default="random" 
					label="Эффект" 
					description="Выберите эффект смены слайда">					
						<option value="random">random</option>
						<option value="fold">fold</option>
						<option value="fade">fade</option>
						<option value="sliceDown">sliceDown</option>
						<option value="Up">Up</option>
				</field>
				
				<field 
					name="time-interval" 
					type="text" 
					size="9" 
					default="1500" 
					label="Интервал" 
					description="Введите интервал времени перед сменой слайда в ms" />	

				<field 
					name="navigation" 
					type="radio" 
					default="false" 
					label="Навигация" 
					description="Включить стрелки навигации?">
						<option value="false">Нет</option>
						<option value="true">Да</option>
				</field>						
			</fieldset>
			
			<fieldset name="advanced" label="">
				<field 
					name="jquery" 
					type="radio" 
					default="true" 
					label="jQuery" 
					description="Включить библиотеку jQuery 1.7.1 ? (Если не уверены, то 'Да')">
						<option value="false">Нет</option>
						<option value="true">Да</option>
				</field>				
			</fieldset>
		</fields>
	</config>
</install>